<div class="row justify-content-md-center mt-3 ">
  <div class="col-md-auto mb-3">
    <h1><%= t('.header') %></h1>

    <p>
      <%= link_to t('.new_badge'), new_admin_badge_path, class: "btn btn-outline-primary btn-lg" %>
    </p>

    <%= render 'shared/errors', resource: @badge %>

    <% if @badges.present? %>
      <table class="table table-striped table-hover">
        <thead class="thead-dark">
        <tr>
          <th class="sort-by-title pointer">
            <%= t('.table.title') %>
            <%= octicon 'arrow-up', class: 'text-success hide' %>
            <%= octicon 'arrow-down', class: 'text-success hide' %>
          </th>
          <th><%= t('.table.image') %></th>
          <th><%= t('.table.rule_type') %></th>
          <th><%= t('.table.rule_option') %></th>
          <th colspan="4" class="text-center"><%= t('.table.actions') %></th>
        </tr>
        </thead>

        <%= render @badges %>

      </table>
    <% else %>
      <p><%= t('.no_badges_available') %></p>
    <% end %>

  </div>
</div>
