<div class="card border-primary">
  <div class="card-body">
    <%= form_with model: [:admin, @test], local: true do |form| %>

      <%= render 'shared/errors', resource: @test %>

      <div class="form-group">
        <p>
          <%= form.label :title %>
          <%= form.text_field :title, id: :test_title, class: 'form-control' %>
        </p><br>

        <p>
          <%= form.label :level %>
          <%= form.text_field :level, id: :test_level, class: 'form-control' %>
        </p><br>

        <p>
          <%= form.label :timer %>
          <%= form.number_field :timer, id: :test_timer, class: 'form-control' %>
        </p><br>

        <p>
          <%= form.label :category_id %>
          <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true,
                                     class: 'form-control' %>
        </p><br>

        <p><%= form.submit class: "btn btn-outline-primary" %></p>
      </div>
    <% end %>
  </div>
</div>
