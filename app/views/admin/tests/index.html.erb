<div class="row justify-content-md-center mt-3 ">
  <div class="col-md-auto mb-3">
    <h1><%= t('.header') %></h1>

    <p>
      <%= link_to t('.new_test'), new_admin_test_path, class: "btn btn-outline-primary btn-lg" %>
    </p>

    <% if @tests.present? %>
      <table class="table table-striped table-hover">
        <thead class="thead-dark">
        <tr>
          <th><%= t('.table.title') %></th>
          <th><%= t('.table.level') %></th>
          <th><%= t('.table.questions') %></th>
          <th colspan="4" class="text-center"><%= t('.table.actions') %></th>
        </tr>
        </thead>

        <%= render @tests %>

      </table>
    <% else %>
      <p><%= t('.no_tests_available') %></p>
    <% end %>

  </div>
</div>
