<% if user_signed_in? %>
  <p class="nav user">Welcome, <b><%= current_user.full_name.html_safe %></b> Guru |
    <% if current_user.admin? %>
      <%= link_to 'Admin Panel', admin_tests_path %> |
    <% end %>
    <%= link_to 'Log Out', destroy_user_session_path, method: :delete %></p>
<% else %>
  <p class="nav user">
    <%= link_to 'Log In', new_user_session_path %> or
    <%= link_to 'Sign Up', new_user_registration_path %>
  </p>
<% end %>

