<%= form_with url: test_passage_path(@test_passage), local: true, method: :put,
              class: 'testpassage-form', data: { testpassage_id: @test_passage.id } do |form| %>

  <%= form.collection_check_boxes :answer_ids,
                                  @test_passage.current_question.answers,
                                  :id, :body, include_hidden: false do |b| %>
    <div class="form-check">
      <p>
        <%= b.check_box id: "answer_ids_#{b.object.id}", class: 'form-check-input' %>
        <%= b.label class: 'form-check-label'%>
      </p>
    </div>
  <% end %>

  <p><%= link_to t('test_passages_helper.gist_question'), gist_test_passage_path(@test_passage),
                 method: :post %></p>
  <%= form.submit t('test_passages_helper.next_button'), class: "btn btn-primary" %>

<% end %>
