<div class="row justify-content-md-center mt-3 ">
  <div class="col-md-auto mb-3">
    <h1><%= t('.header', title: @test_passage.test.title) %></h1>

    <p>
      <%= t('.all_quesions_number', total_questions: @test_passage.total_questions) %> <br>
      <%= t('.questions_with_correct_answers', correct_questions: @test_passage.correct_questions) %>
    </p>

    <% if @badges.present? %>
      <div class="card-header">
        <h1 class="card-title">
          <%= t('.granted_badges') %>
        </h1>
        <table class="table table-striped table-hover">
          <thead class="thead-dark">
          <tr>
            <th class="sort-by-title pointer">
              <%= t('.table.title') %>
              <%= octicon 'arrow-up', class: 'text-success hide' %>
              <%= octicon 'arrow-down', class: 'text-success hide' %>
            </th>
            <th><%= t('.table.image') %></th>
          </tr>
          </thead>

          <%= render @badges %>

        </table>
      </div>
    <% end %>

    <div class="card text-center mb-3">
      <div class="card-body">
        <%= success_percentage_result_message(@test_passage) %> <br>
        <%= link_to t('.all_tests'), tests_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
